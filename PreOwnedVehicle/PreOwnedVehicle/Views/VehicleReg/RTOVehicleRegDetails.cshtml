@model PreOwnedVehicle.Models.tblvehiclereg

@{
    ViewBag.Title = "RTO Vehicle Registration Details";
    Layout = "~/Views/Shared/_LayoutRTO.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/notify.js"></script>
<style>
    textarea{
        width:290px;
    }
    input[type=file]::-webkit-file-upload-button {
        border: none;
        box-shadow: none;
        outline: none;
        display: inline-block;
        padding: 5px 10px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: bold;
        line-height: 1.428571429;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border-radius: 4px;
        color: #ffffff;
        background-color: #007bff;
        border:2px solid #007bff;
        outline:none;
        transition:.5s;
    }

        input[type=file]::-webkit-file-upload-button:hover {
            background-color:white;
            color:#007bff;
            border:2px solid #007bff;
        }

    input[type=file] {
        font-weight: bold;
    }
      .buttonlg{
    border-radius:20px;
    color:white;
    background-color:#007bff;
    border:2px solid #007bff;
    outline:none;
    transition:.5s;
    width:200px;
} 
.buttonlg:hover{
    background-color:white;
    color:#007bff;
    border:2px solid #007bff;
}
.boxtxt{
    border-radius:20px;
}
.boxtxt:focus{
    border-color:#007bff
}
</style>
