 </div>

    <footer class="footer bg-white shadow align-self-end py-3 px-xl-5 w-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 text-center text-md-left text-primary">
                    <p class="mb-2 mb-md-0" style="color:black;">Pre-Own Vehicle <span style="color:#007bff"><strong>Details</strong></span> &copy; 2019-2020</p>
                </div>
            </div>
        </div>
    </footer>
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="~/Home/Index">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    <!-- edit profile -->
    <div class="modal fade" id="editprofile" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm role=" document">
            <div class="modal-content" style="border-radius:10px;">
                <div class="modal-header">
                    <h4 class="modal-title">Hello, @{Html.RenderAction("adminname", "Admin");} </h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="formsubmit">
                        <div class="form-group">
                            <div>
                                <img src="~/Content/boot normal/img/FB-1000x563.jpg" alt="avatar" class="img-fluid rounded-circle" style="width:200px;height:200px;margin-left:30px;margin-right:30px;" />
                                <h5 class="modal-title text-center">@{Html.RenderAction("adminname", "Admin");} </h5>
                                <br />
                            </div>
                            @Html.Hidden("loginid", new { @id = "loginid" })
                            @Html.Label("Username:", htmlAttributes: new { @class = "mb-2" })
                            <div>
                                @Html.Editor("username", new { htmlAttributes = new { @class = "form-control districtxt", @id = "username", required = "required" } })
                            </div>
                            @Html.Label("Password:", htmlAttributes: new { @class = "mb-2" })
                            <div>
                                <input type="password" name="password" class="form-control districtxt" id="pwd" required="required" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success submit buttonlg" onclick="EditPro()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
