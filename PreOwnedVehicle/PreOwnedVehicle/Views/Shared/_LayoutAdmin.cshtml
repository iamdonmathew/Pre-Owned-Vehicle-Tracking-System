    <script>

        function profile() {
            $.ajax({
                url: '/Admin/EditPro',
                type: "GET",
                dataType: "JSON",
                success: function (model) {
                    $("#loginid").val(model.lid);
                    $("#username").val(model.uname);
                    $("#pwd").val(model.pwd);

                    $("#editprofile").modal("show");
                },
                error: function () {
                    alert("Invalid");
                }
            });
        };

        function EditPro() {
            var Data = $("#formsubmit").serialize();
            $.ajax({
                url: '/Admin/EditProfile',
                type: "POST",
                data: Data,
                dataType: "JSON",
                success: function (model) {
                    if (model.result) {
                        window.location.reload();
                        $("#editprofile").modal("hide");
                    }
                },
                error: function () {
                    alert("Invalid");
                }
            });

        }

            
    </script>
    <style>
        .buttonlg {
            border-radius: 20px;
            color: white;
            background-color: #007bff;
            border: 2px solid #007bff;
            outline: none;
            transition: .5s;
        }

            .buttonlg:hover {
                background-color: white;
                color: #007bff;
                border: 2px solid #007bff;
            }

        .districtxt {
            border-radius: 20px;
        }

            .districtxt:focus {
                border-color: #007bff;
            }


        .butsml {
            padding: 0px;
            margin: 0px;
            border-radius: 20px;
            width: 90px;
            height: 25px;
            color: white;
            background-color: #007bff;
            border: 2px solid #007bff;
            outline: none;
            transition: .5s;
            font-size: 13px;
            font-weight: bold;
            text-align: center;
            vertical-align: middle;
        }

            .butsml:hover {
                background-color: white;
                color: #007bff;
                border: 2px solid #007bff;
            }
    </style>

</head>
