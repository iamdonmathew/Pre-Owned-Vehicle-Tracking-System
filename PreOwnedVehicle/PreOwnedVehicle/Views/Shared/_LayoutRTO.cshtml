    <script>

        function editpro() {
            
            $.ajax({
                url: '/VehicleReg/GetEditPro',
                type: "GET",
                dataType: "JSON",
                success: function (model) {
                    $("#regid").val(model.regid);
                    $("#loginid").val(model.logid);
                    $("#username").val(model.uname);
                    $("#pwd").val(model.pwd);
                    $("#email").val(model.email);
                    $("#address").val(model.addr);
                    $("#district").val(model.did).attr("selected=selected");
                    $("#city").val(model.cid).attr("selected=selected");

                    $("#editprofile").modal("show");
                },
                error: function () {
                    alert("Invalid");
                }
            });
        };
        function updateedit() {
            var Data = $("#formsubmit").serialize();
            $.ajax({
                url: '/VehicleReg/UpdateEditPro',
                type: "POST",
                data: Data,
                dataType: "JSON",
                success: function (model) {
                    if (model.result) {
                        window.location.reload();
                        $("#editprofile").modal("hide");
                    }
                },
                error: function () {
                    alert("Invalid");
                }
            });
        };
    </script>
