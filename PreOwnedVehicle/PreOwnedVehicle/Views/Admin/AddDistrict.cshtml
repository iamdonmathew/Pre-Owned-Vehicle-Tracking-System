@model PreOwnedVehicle.Models.tbldistrict

@{
    Layout = null;
}

@using (Html.BeginForm("AddDistrict","Admin",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal fade" id="adddistrictmodal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm role=" document">
            <div class="modal-content" style="border-radius:10px;">
                <div class="modal-header">
                    <h4 class="modal-title">Add District</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            @Html.LabelFor(model => model.districtname, "District Name:", htmlAttributes: new { @class = "mb-2" })
                            <div>
                                @Html.EditorFor(model => model.districtname, new { htmlAttributes = new { @class = "form-control districtxt", required = "required" } })
                                @Html.ValidationMessageFor(model => model.districtname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary submit buttonlg">Submit</button>
                </div>
            </div>
        </div>
    </div>
}
