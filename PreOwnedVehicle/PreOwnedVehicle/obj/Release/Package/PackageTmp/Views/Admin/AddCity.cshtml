@model PreOwnedVehicle.Models.tblcity

@{
    Layout = null;
}

@using (Html.BeginForm("AddCity", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal fade" id="addcitymodal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm role=" document">
            <div class="modal-content" style="border-radius:10px;">
                <div class="modal-header">
                    <h4 class="modal-title">Add City</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            @Html.LabelFor(model => model.districtid, "District Name:", htmlAttributes: new { @class = "mb-2" })
                            <div>
                                @Html.DropDownList("districtid", new SelectList(ViewBag.dist, "districtid", "districtname"), "--select--", htmlAttributes: new { @class = "form-control citytxt",required="required" })
                                @Html.ValidationMessageFor(model => model.districtid, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.cityname, "City Name:", htmlAttributes: new { @class = "mb-2" })
                            <div>
                                @Html.EditorFor(model => model.cityname, new { htmlAttributes = new { @class = "form-control citytxt", required = "required" } })
                                @Html.ValidationMessageFor(model => model.cityname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary submit buttonlg">Submit</button>
                </div>
            </div>
        </div>
    </div>
}
