@model PreOwnedVehicle.Models.tbllogin

@{
    ViewBag.Title = "Login-Pre-Own Vehicle Tracking Details";
    Layout = null;
}


<style>
    .boxtxt{
        border-radius:20px;
    }
    .boxtxt:focus{
            border-color:#007bff;
    }
</style>

@using (Html.BeginForm("Login","ManageUser",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()

 
    <div class="modal fade" id="loginmodal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" >
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="login px-4 mx-auto mw-100">
                        <h5 class="text-center mb-4">Login Now</h5>
                        <form>
                            <div class="form-group">
                                @Html.LabelFor(model => model.username,"Username", htmlAttributes: new { @class = "mb-2" })
                                <div>
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control boxtxt",required="required"}})
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.password,"Password", htmlAttributes: new { @class = "mb-2" })
                                <div>
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control boxtxt",required="required"} })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary submit mb-4 boxtxt">Log In</button>
                            <p class="text-center pb-4">
                                <a href="" id="clickhide" data-dismiss="modal" data-toggle="modal" data-target="#forgetpwdmodal">Forget Password ?</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
}
<script>
    if ('@TempData["dataalready"]' != "") {
        alert('@TempData["dataalready"]');
        window.location.href = '@Url.Action("Index","Home")';
    }
</script>
